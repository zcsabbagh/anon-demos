{
  "include": ["src/**/*"],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
  "compilerOptions": {
    "sourceMap": true,
    "downlevelIteration": true,
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "./dist",
    "module": "esnext",
    "target": "esnext",
    "lib": ["dom", "dom.iterable"],
    "moduleResolution": "node",
    "declaration": true
  }
}
